<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/addButton"
            android:layout_width="99dp"
            android:layout_height="54dp"
            android:layout_marginTop="124dp"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodItem" />

        <EditText
            android:id="@+id/foodItem"
            android:layout_width="138dp"
            android:layout_height="76dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:height="48dp"
            android:ems="10"
            android:hint="Enter food item"
            android:inputType="text"
            android:text="Pizza"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/caloriesText"
            android:layout_width="172dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Calories: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodItem" />

        <TextView
            android:id="@+id/sugarText"
            android:layout_width="171dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:text="Sugar:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodItem" />

        <EditText
            android:id="@+id/Meal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Enter meal name"
            android:inputType="text"
            android:text="Meal"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addButton"
            app:layout_constraintVertical_bias="0.097" />

        <TextView
            android:id="@+id/totalCalories"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="Total Calories: "
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Meal1" />

        <TextView
            android:id="@+id/totalSugar"
            android:layout_width="174dp"
            android:layout_height="30dp"
            android:text="Total Sugar: "
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.288"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalCalories"
            app:layout_constraintVertical_bias="0.162" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>